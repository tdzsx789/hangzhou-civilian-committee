{
  "name": "hangzhou-civilian-committee",
  "version": "1.0.0",
  "private": true,
  "homepage": ".",
  "description": "杭州市民委员会 - 30个Web展项Monorepo项目",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "build": "lerna run build",
    "build:all": "lerna run build --parallel",
    "start": "lerna run start --parallel",
    "start:single": "lerna run start --scope",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "new": "node scripts/create-exhibition.js",
    "create:all": "node scripts/create-all-exhibitions.js",
    "install:all": "lerna exec -- npm install",
    "clean:build": "lerna exec -- rm -rf build dist"
  },
  "devDependencies": {
    "lerna": "^8.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "mammoth": "^1.11.0"
  }
}
